<div class="container h-100">
  <div class="row d-flex justify-content-center align-items-center h-100">
    <div class="col-lg-12 col-xl-11 mt-4">
      <div class="card text-black" style="border-radius: 45px;">
        <div class="card-body p-md-5">
          <div class="row justify-content-center">
            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
              <h1 class="h1 fw-bold"> Sign up </h1>

              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>

                <div class="d-flex flex-row align-items-center mb-4">
                  <div class="form-outline flex-fill mb-0">
                    <i class="bi bi-envelope"></i>
                    <%= f.label :email %><br />
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: true, class: 'form-control' %>
                  </div>
                </div>

                <div class="d-flex flex-row align-items-center mb-4">
                  <div class="form-outline flex-fill mb-0">
                    <i class="bi bi-safe"></i>
                    <%= f.label :password, class: "text"%>
                    <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> символов минимум)</em>
                    <% end %><br />
                    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
                  </div>
                </div>

                <div class="d-flex flex-row align-items-center mb-4">
                  <div class="form-outline flex-fill mb-0">
                    <i class="bi bi-safe"></i>
                    <%= f.label :password_confirmation %><br />
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
                  </div>
                </div>

                <div class="action d-flex flex-row align-items-center mb-4">
                  <%= f.submit "Sign up", class: 'btn btn-outline-primary'%>
                </div>

                <div class="d-flex flex-row align-items-center mt-4">
                  <%= render "devise/shared/links" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
